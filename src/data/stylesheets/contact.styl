.form
    display block
    button.submit
        display block
        width 100%
        margin 15px 0 5px
        padding 0
        border 0
        text-align center
        height 30px
        line-height 30px
        box-shadow 0 0 5px rgba(0, 0, 0, 0.2)
        border-radius 3px
        background white
    label
        display block
        background white
        box-shadow 0px 0px 5px rgba(0, 0, 0, 0.2)
        height 30px
        margin 10px 0
        border-radius 3px
        overflow auto
        position relative
        > span 
            display block
            margin 0
            padding 0
            position absolute
            left 30px
            right 0
            top 0
            bottom 0
            > input, > textarea
                text-indent 15px
                margin 0
                padding 0
                height 100%
                width 100%
                border 0
                background transparent
        > i
            display inline-block
            height 30px
            width 30px
            line-height 30px
            text-align center
            box-shadow 0 0 5px rgba(0, 0, 0, 0.2)
            margin 0
            padding 0
        &.large
            height 75px
