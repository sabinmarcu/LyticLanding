> aside
	transition all 0.5s ease-in-out
	position absolute
	left -200%
	right 200%
	top 0
	bottom 0
	background white
	box-shadow 0 0 5px rgba(0, 0, 0 ,0.2)
	transform-origin right center
	width 100%
	height 100%
	&:last-of-type
		transform-origin left center
		border solid 1px rgba(0, 0 ,0 ,0.05)
		left 200%
		right -200%

&.active > aside
	left 0
	right 0
