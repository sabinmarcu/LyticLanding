&
    background url("http://silvercreativegroup.com/wp-content/uploads/2013/04/analytics.jpg") no-repeat right bottom white
    width 100%
    height 100%
    overflow hidden
    transition transform, border-radius, opacity, filter 0.5s ease-in-out
    .container
        width 1000px
        margin 0 auto
        h1
            background articlecolor
            padding 25px
            margin 0
            border-radius 2px
            margin 25px 0

    .flow
        position absolute
        top 0
        bottom 0
        right 0
        left 0
        overflow-y auto
        overflow-x hidden
        z-index 9

@media (max-width: 1000px)
    .container
        width 600px

@media (max-width: 600px)
    .container
        width auto
