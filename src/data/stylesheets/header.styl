hheight = 200px

@keyframes revolve
    0%, 84%, 16%
        transform none
        opacity 1
    32%, 67%
        transform rotateY(-90deg) translateX(-100%)
        opacity 0
    68%
        transform rotateY(90deg) translateX(100%)
        opacity 0

@keyframes fade
    0%, 16%
        transform translateX(100%)
        opacity 0
    32%, 68%
        opacity 1
        transform none
    84%, 100%
        transform translateX(-100%)
        opacity 0

header
    display block
    border-top solid 5px #639
    position fixed
    top 0
    left 0
    right 0
    height hheight
    articlestyle()
    transition transform 0.5s ease-in-out
    &.fullscreen
        transform translateY(-200%)
    h1
        display block
        padding 0
        margin 0
        font-weight 100
        font-size hheight - 50
        text-transform uppercase
        text-align center
        overflow hidden
        small
            display none
        background #fff
        figure
            display block
            margin 0
            padding 0
            position absolute
            left 0
            right 0
            top 0
            bottom 0
            text-align center
            animation revolve 12s 2s infinite
            img
                height 100%
                width auto
        figcaption
            display block
            margin 0
            padding 0
            animation fade 12s 2s infinite
            transform translateX(-100%)
            opacity 0
    nav
        height navheight
        position absolute
        top hheight
        left 0
        right 0
        div
            display inline-block
            margin 0
            padding 0
            text-align center
            width 25%
            height navheight
            line-height navheight
            float left
            background #fff
            box-shadow 0px 0px 1px darken(#fff, 15) inset
            a, a:hover, a:visited, a:active, a:link
                color inherit
                text-decoration none
            span
                padding 0 2px
            transition all 0.5s ease-in-out
            color #999
            min-width 75px
            cursor pointer
            &:hover
                box-shadow none
                &.facebook
                    background #3b5998
                    color white
                &.twitter
                    background #4099FF
                    color white
                &.admin
                    background darken(red, 12)
                    color white
                &.contact
                    background black
                    color white



.flow.prime
    padding-top hheight + navheight

@media (min-width: 1200px)
    cwidth = 875px
    header
        top 25px
    nav.languages
        top 30px
    .flow.prime
        padding-top 0
        left auto
        .container
            float left
            width cwidth

@media (max-width: 1000)
    hheight = 200px
    header
        height hheight
        h1
            font-size hheight - 50
        nav
            top hheight

    .flow.prime
        padding-top 200px + navheight

@media (max-width: 600px)
    hheight = 150px
    header
        height hheight
        h1
            font-size hheight - 50
        nav
            top hheight

    .flow.prime
        padding-top 150px + navheight

@media (max-width: 320px)
    hheight = 100px
    header
        height hheight
        h1
            font-size 75px
        nav
            top hheight

    .flow.prime
        padding-top 100px + navheight

