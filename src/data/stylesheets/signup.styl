.flow.prime
    padding-bottom formheight + 50px

.flow.prime.signedup
    padding-bottom 0

aside
    display block
    position fixed
    width 900px
    height formheight
    right 0
    bottom 0
    margin-bottom 50px
    z-index 9999
    transition all 0.5s ease-in-out
    &.hidden
        transform translateX(-100%)
    section
        background #639
        height formheight
        border solid 1px rgba(0, 0, 0, 0.1)
        display block
        position relative
        div
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            &.input
                right formbuttonwidth
            &.submit 
                left auto
                width formbuttonwidth
        input
            background transparent
            border none
            margin 0
            padding 0
            width 100%
            height 100%
            text-align left
            line-height formheight
            outline none
            text-indent 15px
            color white
            text-shadow 0 1px 1px rgba(0, 0, 0, 0.1)
            font-size 14pt
            font-family Roboto, inherit
            font-weight 100
            transition all 0.5s ease-in-out
            &:hover, &:active
                background darken(#639, 5)
            &[type=submit]
                font-size 12pt
                text-indent 0
                text-align center
                background darken(#639, 10)
                transition all 0.5s ease-in-out
                -webkit-appearance none
                border-radius 0
                &:hover, &:active
                    background darken(#639, 25)

@media (max-width: 1200px) 
    aside
        margin-bottom 0
        width auto
        min-width 0px
        max-width 99999999999999px
        right 0
        left 0
        height formheight
    .flow.prime
        padding-bottom formheight+ 25px

placeholder()
    color white
    opacity 0.5
    font-family Roboto, inherit
    font-weight 100

*::-webkit-input-placeholder
    placeholder()
*:-moz-placeholder
    placeholder()
*::-moz-placeholder
    placeholder()
*:-ms-input-placeholder
    placeholder()
