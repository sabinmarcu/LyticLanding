.languages
    display block
    position absolute
    top 0
    left -5px
    height 15px
    z-index 99999999
    padding 5px
    opacity 0.7
    transition all 0.5s ease-in-out
    background white
    li
        list-style none
        opacity 0.5
        float left
        transition all 0.5s ease-in-out
        margin 0 0 0 5px
        cursor pointer
        &:hover
            opacity 1
    &.fullscreen
        top 0 !important
