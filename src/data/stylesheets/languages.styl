.languages
    display block
    position absolute
    top 5px
    left 0px
    right 15px
    height 15px
    z-index 99999999
    li
        list-style none
        float left
        opacity 0.5
        transition all 0.5s ease-in-out
        margin 0 0 0 5px
        cursor pointer
        &:hover
            opacity 1

